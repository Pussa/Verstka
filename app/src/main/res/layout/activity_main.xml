<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <com.google.android.material.bottomnavigation.BottomNavigationView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        app:itemBackground="@color/colorWhite"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@drawable/bottom_navigation_item_background_colors"
        app:itemTextColor="@drawable/bottom_navigation_item_background_colors"
        app:menu="@menu/my_navigation_items" />
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="true"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:textAlignment="center"
            android:theme="@style/Toolbar"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Профиль"
            android:gravity = "center"
            android:layout_marginTop="-40dp"
            android:textAppearance="@style/TitleBarTextAppearance"
            android:id="@+id/toolbar_title" />

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-24dp"
            android:background="#007DB354"
            app:srcCompat="@drawable/ic_edit" />

    </com.google.android.material.appbar.AppBarLayout>


    <include
        android:id="@+id/include"
        layout="@layout/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="402dp"
                android:layout_marginTop="-35dp"
                app:srcCompat="@mipmap/ic_mans_foreground" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-60dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="8sp"
                android:text="Константинов Денис"
                android:textColor="#DE000000"
                android:textSize="24sp"
                android:textStyle="normal"
                tools:text="Константинов Денис" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="4sp"
                android:text="Дата рождния"
                android:textColor="#61000000"
                android:textSize="12sp"
                android:textStyle="normal"
                tools:text="Дата рождния" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:text="01 февраля 1980"
                android:textSize="16sp"
                android:textColor="#DE000000"
                tools:text="01 февраля 1980" />

            <TextView
                android:id="@+id/textView4"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#61000000"
                android:lineSpacingExtra="4sp"
                tools:text="Сфера деятельности"
                android:text="Сфера деятельности"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:text="Хирургия, травмотология"
                android:textSize="16sp"
                android:textColor="#DE000000"
                tools:text="Хирургия, травмотология" />


            <Switch
                android:isScrollContainer="true"
                android:id="@+id/switch1"
                android:layout_width="314dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="28dp"
                android:layout_marginRight="20dp"
                android:fontFamily="sans-serif"
                android:text="Получать push-уведомления"
                android:textColor="#DE000000"
                android:textIsSelectable="true"
                android:textSize="16sp"
                android:textStyle="normal" />

            <View
                android:id="@+id/gray_stick"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="18dp"
                android:background="#AABBBB" />
            <TextView
                android:id="@+id/textView6"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#61000000"
                android:lineSpacingExtra="4sp"
                tools:text="Ваши друзья"
                android:text="Ваши друзья"/>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                app:srcCompat="@mipmap/ic_ava3_foreground" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="88dp"
                android:layout_marginTop="-35dp"

                android:text="Дмитрий Валерьевич"
                android:textSize="16sp"
                android:textColor="#DE000000"
                tools:text="Дмитрий Валерьевич" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="24dp"
                app:srcCompat="@mipmap/ic_ava1_foreground" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="88dp"
                android:layout_marginTop="-35dp"
                android:text="Евгений Александров"
                android:textSize="16sp"
                android:textColor="#DE000000"
                tools:text="Евгений Александров" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="24dp"
                app:srcCompat="@mipmap/ic_ava0_foreground"
                android:isScrollContainer="true"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="88dp"
                android:layout_marginTop="-35dp"
                android:text="Виктор Кузнецов"
                android:textSize="16sp"
                android:textColor="#DE000000"
                tools:text="Виктор Кузнецов"
                android:isScrollContainer="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/gray_stick2"
                android:layout_marginTop="32dp"
                android:background="#AABBBB"/>
            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="77dp"
                android:gravity="center"
                android:text="Выйти из аккаунта"
                android:textColor = "#FFFFFF"
                android:background="#66A636"
                android:textSize="14sp" />





        </LinearLayout>
    </ScrollView>




</androidx.coordinatorlayout.widget.CoordinatorLayout>